<link rel="icon" type="image/png" sizes="512x512" href="https://assets.papermc.io/web/android-chrome-512x512.png" />
<link rel="apple-touch-icon" type="image/png" href="https://assets.papermc.io/web/apple-touch-icon.png" />
<link rel="apple-touch-icon" type="image/png" sizes="120x120" href="https://assets.papermc.io/web/apple-touch-icon-120x120.png" />
